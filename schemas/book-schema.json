{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Book Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the book"
    },
    "boosts": {
      "type": "object",
      "properties": {
        "health_boost": {
          "type": "integer",
          "default": 0
        },
        "attack_boost": {
          "type": "integer",
          "default": 0
        },
        "defense_boost": {
          "type": "integer",
          "default": 0
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["name"],
  "additionalProperties": false
}