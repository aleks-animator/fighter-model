{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fighter Schema",
  "description": "Defines the structure of a fighter in a turn-based game.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the fighter",
      "default": "Unnamed"
    },
    "health": {
      "type": "integer",
      "description": "The health points of the fighter",
      "minimum": 0,
      "default": 100
    },
    "mana": {
      "type": "integer",
      "description": "The mana points of the fighter",
      "minimum": 0,
      "default": 3
    },
    "speed": {
      "type": "integer",
      "description": "Determines turn order",
      "minimum": 0,
      "default": 10
    },
    "attack": {
      "type": "integer",
      "description": "Attack power of the fighter",
      "minimum": 0,
      "default": 10
    },
    "shield": {
      "type": "integer",
      "description": "Additional health layer",
      "minimum": 0,
      "default": 0
    },
    "defence": {
      "type": "integer",
      "description": "Reduces incoming damage",
      "minimum": 0,
      "default": 5
    },
    "mana_regeneration_rate": {
      "type": "integer",
      "description": "Mana regenerated per turn",
      "minimum": 0,
      "default": 1
    }
  },
  "required": ["name", "health", "speed", "attack"]
}